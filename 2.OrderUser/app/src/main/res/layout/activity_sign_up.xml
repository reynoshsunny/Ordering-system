<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignUp"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Join With Us"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_marginTop="40dp"
                android:text="Name"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textSignName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textSignName"
                android:layout_marginTop="20dp"
                android:text="Address"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textSignAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:hint="Enter House Name"
                android:inputType="textImeMultiLine"
                android:padding="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textSignAddress"
                        android:layout_marginTop="20dp"
                        android:text="Place"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/textSignPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_border_edittext"
                        android:hint="Enter Your Place"
                        android:inputType="textPersonName"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="vertical"
                    android:paddingStart="10dp">


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textSignPlace"
                        android:layout_marginTop="20dp"
                        android:text="Pin Code"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/textSignPin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView4"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_border_edittext"
                        android:hint="Pin Code"
                        android:inputType="number"
                        android:padding="10dp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textSignPin"
                android:layout_marginTop="20dp"
                android:text="Mobile Number"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textSignMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:hint="Enter Mobile Number"
                android:inputType="number"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textSignMobile"
                android:layout_marginTop="20dp"
                android:text="E-Mail ID"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textSignMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:hint="Enter Mail ID"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textSignMail"
                android:layout_marginTop="20dp"
                android:text="Password"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textSignPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:hint="Enter Your Password"
                android:inputType="textPassword"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textSignPassword"
                android:layout_marginTop="20dp"
                android:text="Confirm Password"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textSignConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:ems="15"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textSignConfirm"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="#673AB7"
                android:onClick="onClickRegister"
                android:text="Register"
                android:textColor="@android:color/white" />


        </LinearLayout>


    </ScrollView>



</LinearLayout>