<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ChangeAddress">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:gravity="center_horizontal"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/change_add" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="start"
            android:text="New Address"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtAddressNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_border_edittext"
            android:layout_marginTop="5dp"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAddressNew"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Enter Place"
            android:gravity="start"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtPlaceNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_edittext"
            android:padding="10dp"
            android:layout_below="@id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPlaceNew"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Enter Pin Code"
            android:gravity="start"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtPinNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_border_edittext"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:inputType="number" />

        <Button
            android:id="@+id/btnAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPinNew"
            android:layout_centerInParent="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="80dp"
            android:background="#673AB7"
            android:text="Save"
            android:textColor="@android:color/white" />




    </LinearLayout>



</ScrollView>



</LinearLayout>